{
  "builds": [
    {
      "name": "frontend",
      "dir": "frontend",
      "command": "yarn build",
      "outputs": ["dist"]
    },
    {
      "name": "backend",
      "dir": "backend",
      "command": "yarn start",
      "watchPatterns": ["src/**/*.ts"]
    }
  ],
  "routes": [
    {
      "handle": "frontend",
      "src": "/(.*)",
      "dest": "/frontend/dist/$1"
    },
    {
      "handle": "api",
      "src": "/api/(.*)",
      "dest": "/backend/src/$1",
      "headers": {
        "Access-Control-Allow-Origin": "*"
      }
    }
  ]
} 